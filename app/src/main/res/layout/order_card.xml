<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="12dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#388E3C">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:src="@drawable/clock"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="12dp" />
        </FrameLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="8dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView9"
                        android:layout_gravity="left"
                        android:src="@drawable/user_black"
                        android:padding="10dp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/address"
                        android:layout_marginLeft="56dp"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:text="Ефанов Евгений"
                        android:singleLine="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Заказчик"
                        android:id="@+id/textView44"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="#727272"
                        android:textSize="12sp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="10dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#b6b6b6"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="16dp"></FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView10"
                        android:layout_gravity="left"
                        android:src="@drawable/marker"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/gender"
                            android:layout_gravity="left"
                            android:layout_marginLeft="56dp"
                            android:textColor="#212121"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="Москва Россия Одинцово ДубкиМосква Россия Одинцово Дубки"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Адрес"
                            android:id="@+id/textView44fdfd"
                            android:layout_gravity="left|center_vertical"
                            android:textColor="#727272"
                            android:textSize="12sp"
                            android:layout_marginLeft="56dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        android:background="#727272"></FrameLayout>

    <FrameLayout
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/red_circle"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="24dp"></FrameLayout>

</FrameLayout>